@model List<Product>

@{
    ViewData["Title"] = "Home Page";
}

<!-- Banner Section -->
<div class="container container-fluid banner-section pt-5 pb-4">
    <div class="row align-items-center mt-3">
        <div class="col-md-6">
            <h1 class="display-4 header">FIND DEVICE <br> THAT MATCHES <br> YOUR PASSION</h1>
            <p class="lead mt-4">Browse through our diverse range of meticulously crafted devices, designed to bring out the best of innovation and technology.</p>
            <div class="stats d-flex justify-content-between mt-4">
                <div class="ms-0">
                    <h3 class="font-weight-bold m-0">200+</h3>
                    <p>International Brands</p>
                </div>
                <div class="">
                    <h3 class="font-weight-bold m-0">2,000+</h3>
                    <p>High-Quality Products</p>
                </div>
                <div class="">
                    <h3 class="font-weight-bold m-0">30,000+</h3>
                    <p>Happy Customers</p>
                </div>
            </div>
        </div>
        <div class="col-md-6 text-center">
            <img src="~/images/Home/Banner.png" alt="Laptop image" class="img-fluid">
        </div>
    </div>
</div>

<!-- Brands Section -->
<div class="brand-section text-center">
    <div class="brand-logos d-flex justify-content-around align-items-center">
        <span class="apple">APPLE</span>
        <span class="samsung">SAMSUNG</span>
        <span class="dell">DELL</span>
        <span class="hp">HP</span>
        <span class="sony">SONY</span>
        <span class="microsoft">MICROSOFT</span>
    </div>
</div>

<!-- Top Selling Section -->
<div class="container mt-5">
    <h2 class="text-center mb-5 pt-4 section-header">TOP SELLING</h2>
    <div class="row">
        @foreach (var product in Model.Take(4))
        {
            <div class="col-md-3 mb-4">
                <a asp-action="ShowDetails" asp-controller="Product" asp-route-id="@product.Id" class="card-button">
                    <div class="card h-100 text-center p-3">
                        <img src="@product.ImageUrl" alt="@product.Name" class="card-img-top img-fluid pb-0 mb-0">
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <div class="d-flex justify-content-center mb-2">
                                <!-- Rating -->
                                @* <span class="me-1">&#9733;&#9733;&#9733;&#9733;&#9734;</span>
                            <span>@product.Rating / 5</span> *@
                            </div>
                            <div>

                                <span class=" fw-bold">$@product.Price</span>
                                <span class="text-muted text-decoration-line-through">
                                    @{
                                        string total = (product.Price * 1.15M).ToString("0.00");
                                    }
                                    $@total
                                </span>
                                <span class="discount-badge">-15%</span>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
    <div class="text-center mt-3">
        <a class="btn btn-outline-dark px-4" asp-area="" asp-controller="Product" asp-action="Index">View All</a>
    </div>
</div>

<!-- Browse by Product Category Section -->
<div class="container category-section mt-5">
    <h2 class="text-center section-header mb-5 mt-5">BROWSE BY PRODUCT CATEGORY</h2>
    <div class="row text-center mx-4">
        <div class="col-md-4 mb-4">
            <a asp-controller="Product" asp-action="Index" asp-route-searchQuery="" asp-route-categoryId="1" class="category-card">
                <div class="card h-100">
                    <h5 class="card-title">Laptops</h5>
                    <div class="card-body Category-body">
                        <img src="~/images/Categories/Laptop.png" alt="Laptops" class="card-img-bottom">
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-8 mb-4">
            <a asp-controller="Product" asp-action="Index" asp-route-searchQuery="" asp-route-categoryId="2" class="category-card">
                <div class="card h-100">
                    <h5 class="card-title">Sounds & Headphones</h5>
                    <div class="card-body Category-body">
                        <img src="~/images/Categories/Speaker.png" alt="Sounds & Headphones" class="card-img-bottom">
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-7 mb-4">
            <a asp-controller="Product" asp-action="Index" asp-route-searchQuery="" asp-route-categoryId="3" class="category-card">
                <div class="card h-100">
                    <h5 class="card-title">Gaming & Accessories</h5>
                    <div class="card-body Category-body">
                        <img src="~/images/Categories/gaming.png" alt="Gaming" class="card-img-bottom">
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-5 mb-4">
            <a asp-controller="Product" asp-action="Index" asp-route-searchQuery="" asp-route-categoryId="4" class="category-card">
                <div class="card h-100">
                    <h5 class="card-title">Smartphones</h5>
                    <div class="card-body Category-body">
                      <img src="~/images/Categories/mobile.png" alt="Smartphones" class="card-img-bottom me-3">
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>



