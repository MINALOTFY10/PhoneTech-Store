        color: #000;
        line-height: 55px;
    }

    .lead {
        line-height: 22px;
    }

    .brand-section {
        background-color: #000;
        padding: 20px;
        width: 100vw;
        margin-left: calc(-50vw + 49%);
    }

    .brand-logos span {
        color: white;
        font-size: 1.8rem;
        margin: 0 20px;
        text-transform: uppercase;
        font-weight: 700;
    }

    /* Different font styles for each brand */
    .apple {
        font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
    }

    .samsung {
        font-family: "Roboto", sans-serif;
    }

    .dell {
        font-family: "Times New Roman", Times, serif;
    }

    .hp {
        font-family: "Georgia", serif;
    }

    .sony {
        font-family: "Futura", sans-serif;
    }

    .microsoft {
        font-family: "Verdana", Geneva, sans-serif;
    }

    .brand-logos span:hover {
        color: #1a73e8;
    }

    .section-header {
        font-weight: 700;
        font-size: 2.8rem;
        align-content: center;
        align-items: center;
        margin: auto;
        display: flex;
        justify-content: center

    }

    .card {
        border-radius: 15px;
    }

    .card-img-top {
        max-height: 200px;
        object-fit: contain;
        margin-bottom: 15px;
    }

    .Category-body {
        display: flex;
        justify-content: end;
    }

    .Category-body h5 {
        font-weight: 600;
        font-size: 1.2rem;
    }

    .text-decoration-line-through {
        margin-left: 10px;
    }

    .discount-badge {
        display: inline-block;
        background-color: rgba(255, 0, 0, 0.1); 
        color: red;
        font-size: 0.7rem;
        font-weight: bold;
        padding: 3px 10px;
        border-radius: 20px;
        margin-left: 10px;
    }

    .card-button {
        text-decoration: none;
        color: black;
    }

    .card-button:hover {
            color: #999999;
    }

    @* Browse by product *@
    .category-section {
        background-color: #F0F0F0;
        border-radius: 20px;
        align-content: center;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center
    }

    .category-card {
        text-decoration: none;
        color: black;
    }

    .category-card:hover {
        color: #555;
    }

    .category-card .card {
        border: none
    }

    .card-body {
        padding: 0;
        overflow: hidden; 
    }

    .card-title {
        font-size: 1.8rem;
        font-weight: 700;
        margin-top: 15px;
        margin-bottom: 25px;
        text-align: start;
        padding: 10px 0 0 36px;
    }

    .card-img-bottom {
        height: auto;
        max-height: 200px;
         width: 100%;
        object-fit: contain;
        float: right;
        margin-left: auto; 
        padding: 0;
        margin: 0;
    }
   
    .card-body img {
        width: auto;
    }


    .text-center h2 {
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 30px;
    }
</style>
