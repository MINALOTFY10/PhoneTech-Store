@{
    ViewData["Title"] = "Delete";
}

<h1>Warning: Delete Product</h1>

<h3>Are you sure you want to delete this product?</h3>

<div>
    <p><strong>Name:</strong> @Model.Name</p>
    <p><strong>Price:</strong> @Model.Price</p>
    <p><strong>Category:</strong> @Model.CategoryName</p>
</div>

<form id="deleteForm" method="post" asp-action="SaveDelete" asp-controller="Product" asp-route-id="@Model.Id">
    <input type="submit" value="Yes, Delete" class="btn btn-danger" onclick="return confirmDelete();" />
    <a asp-action="ShowAll" class="btn btn-secondary">No, Cancel</a>
</form>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

<script>
    function confirmDelete() {
        return confirm('Are you sure you want to delete this product?');
    }
</script>
