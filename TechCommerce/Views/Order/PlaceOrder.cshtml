@model Order

@{
    ViewBag.Title = "Order Success";
}

<h2>Order Success</h2>

@if (TempData["success"] != null)
{
    <div class="alert alert-success">
        @TempData["success"]
    </div>
}

<div class="order-details">
    <h3>Order Details</h3>
    <p><strong>Order ID:</strong> @Model.Id</p>
    <p><strong>Address:</strong> @ViewBag.address</p>
    <p><strong>Order Date:</strong> @Model.Date.ToString("yyyy-MM-dd HH:mm:ss")</p>
    <p><strong>Total Amount:</strong> $@Model.Price</p>
</div>
