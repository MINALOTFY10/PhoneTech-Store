@model List<Address>

<div class="container">
    <h2 class="text-center my-4 pt-4 shiping-header">Select a Shipping Address</h2>
    <div class="d-flex justify-content-between align-items-center mb-4">
        <p class="text-muted">Please select from your saved addresses or add a new one.</p>
        <a asp-action="AddUpdataAddress" asp-controller="User" asp-route-returnUrl="@Url.Action("CheckOut", "Order")" class="btn btn-dark">
            <i class="fas fa-plus"></i> Add Address
        </a>
    </div>

    <div class="row g-4">
        @if (Model.Count == 0)
        {
            <div class="col-12">
                <div class="alert alert-warning text-center">
                    <h5>No stored addresses found.</h5>
                    <p>Add a new address to proceed with the order.</p>
                </div>
            </div>
        }
        else
        {
            @foreach (var item in Model)
            {
                <!-- Address Card -->
                <div class="col-md-4 col-sm-6">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text">
                                @item.MainSt<br>
                                @item.City, @item.Country
                            </p>
                            <a asp-controller="Order" asp-action="PaymentMethod" asp-route-id="@item.Id" asp-route-mainst="@item.MainSt" asp-route-City="@item.City" class="btn btn-outline-dark w-100 mt-3">
                                Select Address
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

<style>
    .shiping-header {
        font-weight: 700
    }
</style>